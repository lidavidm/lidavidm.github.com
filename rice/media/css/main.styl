@import url('crimson/crimson.css');
@import url('crimson-smcp/crimson-smcp.css');

font-serif = 'crimson', serif;
font-sans = 'source-sans-pro', sans-serif;
font-header = 'crimson', serif;
font-small-caps = 'crimson-smcp';
font-cursive = 'alex-brush';

color-muted = #555;
color-primary = #8B0000;
color-secondary = #093958;
color-accent = #0B88D7;
color-highlight = #98960F;

transition(args...) {
  -webkit-transition: args;
  -moz-transition: args;
  -ms-transition: args;
  -o-transition: args;
  transition: args;
}

body {
  font-family: font-serif;
  font-size: 18px;
  background: #F9FAF5;
}

h1,h2,h3,h4,h5,h6 {
  font-family: font-header;
}

#header {
  background: #FFF;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 1);
  z-index: 10000;

  &.alt-blue {
    background-color: #DEFEFF;
  }
  
  h1 {
    position: absolute;
    left: 0.1rem;
    top: 0.1rem;
    bottom: 0;
    font-size: 3rem;
    font-family: font-sans;
    font-weight: 300;
    margin: 0;
    display: inline-block;

    #mobile-menu {
      display: none;
    }

    i.icon {
    }

    .page-title {
      display: inline-block;
    }

    .article-title {
      display: inline-block;
      margin-left: 1rem;
      font-weight: 400;
      color: color-accent;
    }
  }
}

#mainnav {
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 100%;

    li {
      a:link, a:visited, a:hover, a:active {
        display: inline-block;

        text-decoration: none;
        text-transform: uppercase;
        font-family: font-sans;
        font-weight: 600;
        color: color-muted;

        transition: color 200ms ease-out;
      }

      a:hover {
        color: color-accent;
      }
    }
  }
}

main {
  position: absolute;
  top: 6rem;
  left: 1rem;
  right: 1rem;
  z-index: 1000;

  #footer {
    padding: 3em 1em;
    color: color-muted;
  }
}

.article {
  font-size: 1.1em;

  background: #F9FAF5;

  > * {
    padding: 0 1rem;
  }

  header {
    padding: 0;
    background-size: cover;

    &.backdrop {
      height: 16rem;
      position: relative;

      h1 {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;

        text-shadow: 3px 3px 2px rgba(0, 0, 0, 1);
        
        background: -moz-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,0.7))); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.7) 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.7) 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.7) 100%); /* IE10+ */
        background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.7) 100%); /* W3C */

        a:link, a:visited, a:hover, a:active {
          color: #FFF;
        }
      }

      h1.no-shadow {
        background: none;
      }
    }

    h1 {
      padding: 0 1rem;
      font-size: 5em;
      margin: 0;
      font-family: font-sans;
      font-weight: 200;

      a:link, a:visited, a:hover, a:active {
        color: #000;
        text-decoration: none;
      }
    }

    >div {
      padding: 1rem;
    }
  }

  time {
    display: block;
    font-style: italic;
    margin: 0.5em 0;
    font-size: 0.9em;
  }

  div.about {
    margin: 0.5em 0;
  }

  ul.tags {
    font-style: italic;
    padding: 0 1rem;
    margin: 0.5em 0;
    font-size: 0.9em;

    li {
      display: inline-block;
    }
  }

  h2,h3,h4,h5,h6 {
    color: darkred;
    font-weight: 400;
  }

  p {
    line-height: 1.4em;
  }

  >p:first-of-type, hr+p {
    &::first-line {
      /* -moz-font-feature-settings: "smcp" 1;  */
      /* -moz-font-feature-settings: "smcp=1";  */
      /* -ms-font-feature-settings: "smcp" 1;  */
      /* -o-font-feature-settings: "smcp" 1;  */
      /* -webkit-font-feature-settings: "smcp" 1;  */
      /* font-feature-settings: "smcp" 1; */
      font-family: font-small-caps;
      font-size: 1.2em;
    }

    &::first-letter {
      float: left;
      color: darkred;
      font-size: 4.5em;
      line-height: 0.8em;
      padding-top: 0.1em;
      padding-right: 0.05em;
    }
  }

  blockquote {
    margin: 1em 4em;

    border: 3px solid color-secondary;
    border-left: 0;
    border-right: 0;
    
    color: color-muted;
    
    p {
      font-style: italic;
      font-size: 1.5em;
      margin: 0.5em 0;
      line-height: 1.5em;
    }

    p:first-child:before {
      content: "“";
      height: 1rem;
      font-size: 4em;
      float: left;
      color: color-primary;
      line-height: 1em;
      padding-right: 0.1em;
    }

    cite {
      font-style: italic;
      color: color-primary;
    }

    cite:before {
      content: "—";
      color: color-primary;
    }

    &.small {
      font-size: 0.8em;
    }

    &.side {
      float: right;
      width: 40%;
      margin: 1em;

      p {
        font-size: 1.2em;
      }

      p:first-child:before {
        content: "";
      }
    }
  }

  hr {
    border-color: darkred;
  }

  a:link, a:visited, a:hover, a:active {
    color: black;
    transition: color 100ms ease-out;
  }

  a:hover {
    color: color-accent;
  }
}

/** Layout **/

/* Phone Only */
@media screen and (max-device-width: 767px) {
  #header {
    height: 3rem !important;

    h1 {
      top: 0;
      left: 0;
      font-size: 2.4rem;
      line-height: 3rem;
    }

    #mainnav {
      top: 3rem;
    }
  }

  main {
    top: 3rem;
    left: 0;
    right: 0;
  }

  .article {
    font-size: 1em;

    header {
      &.backdrop {
        height: 6rem;

        h1 {
          font-size: 4rem;
          font-weight: 300;
        }
      }
    }

    blockquote {
      margin: 1em;

      font-size: 1.25em;

      &.small {
        font-size: 0.7em;
      }

      cite {
        font-size: 1.25em !important;
      }
    }
  }
}

/* Mobile Only */
@media screen and (max-device-width: 1279px) {
  header {
    h1 {
      #mobile-menu {
        display: inline-block !important;
        padding: 0 0.25em;
        margin-left: -0.7em;
        padding-right: 0.3em;
        margin-right: 0.3em;

        font-size: 2rem;

        transition: all 500ms ease-out;

        &.open {
          margin-left: -0.4em;
          padding-right: 0;
          color: color-accent;
        }

        &:active {
          border: 1px solid color-accent;
          color: color-accent;
        }
      }

      i.icon-ricelogo {
        margin-left: -0.4em;
      }

      .page-title {
        margin-left: -0.4em;
      }

      .article-title {
        display: none !important;
      }
    }
    #mainnav {
      position: fixed;
      left: 0;
      right: 0;

      transform: translateX(-110%);
      opacity: 0;

      background: rgba(255, 255, 255, 0.95);
      box-shadow: 1px 1px 5px rgba(0, 0, 0, 1);

      transition: all 500ms ease-out;

      ul {
        li {
          a {
            width: 100%;
            padding: 0.75em 0;
            text-align: center;
            border-bottom: 1px solid color-muted;
          }
        }
      }

      &.open {
        transform: translateX(0%);
        opacity: 1;
      }
    }
  }

  .welcome {
    display: none;
  }
}

/* Tablet only */
@media screen and (min-device-width: 768px) and (max-device-width: 1279px) {
  header {
    #mainnav {
      top: 6rem;
    }
  }
}


/* Tablet and desktop */
@media screen and (min-device-width: 768px) {
  .article {
    
    width: calc(100% - 2em);
    max-width: 58rem;
    margin: 0 auto;
    padding-bottom: 1em;

    font-size: 1.1em;

    box-shadow: 1px 1px 5px rgba(0, 0, 0, 1);
  }
}


/* Desktop Only */
@media screen and (min-device-width: 1280px) {
  main, #header {
    min-width: 960px;
  }

  .welcome {
    display: block;
    position: absolute;
    top: 9rem;
    left: 0;
    right: 0;
    z-index: 0;

    color: lighten(color-muted, 70%);

    span {
      display: block;
      font-size: 4em;
      margin: 0.5rem 1rem;
    }

    span:nth-child(2n) {
      text-align: right;
    }

    span:first-of-type {
      font-family: font-serif;
    }
  }

  #mainnav {
    position: absolute;
    top: auto !important;
    right: 0;
    bottom: 0;
    
    ul {
      height: 100%;
      font-size: 0;
      li {
        height: 100%;
        display: inline-block;

        a:link, a:visited, a:hover, a:active {
          font-size: 1.4rem;
          line-height: 100%;
          height: 100%;
          padding: 0.5em 1em 0.1em 1em;
        }
      }
    }
  }
}